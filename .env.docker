# ==============================================================================
# DOCKER COMPOSE CONFIGURATION
# ==============================================================================
# Copy this to .env and customize for your deployment

# Database Configuration
POSTGRES_USER=quotebot
POSTGRES_PASSWORD=change_this_secure_password_2024
POSTGRES_DB=quotebot
POSTGRES_PORT=5433

# Redis Configuration
REDIS_PASSWORD=change_this_redis_password_2024
REDIS_PORT=6380

# ==============================================================================
# APPLICATION CONFIGURATION (.env file for app container)
# ==============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false

# Dify Configuration
DIFY_API_URL=https://quotebot.tablazat.hu/v1
DIFY_API_KEY=your-dify-api-key-here

# Tablazat.hu Configuration
TABLAZAT_CALLBACK_URL=https://tablazat.hu/api/quotebot/result
TABLAZAT_CALLBACK_TIMEOUT=10
TABLAZAT_CALLBACK_MAX_RETRIES=3

# Database (will be overridden by docker-compose)
DATABASE_URL=postgresql://quotebot:change_this_secure_password_2024@postgres:5432/quotebot
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (will be overridden by docker-compose)
REDIS_URL=redis://:change_this_redis_password_2024@redis:6379/0
REDIS_MAX_CONNECTIONS=50

# CORS
CORS_ORIGINS=["https://tablazat.hu"]

# Conversation Settings
CONVERSATION_TTL=86400
MAX_CONVERSATION_MESSAGES=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=true

# Completion Detection
COMPLETION_KEYWORDS=["thank you for providing all the information","we'll send you a quote","our team will contact you","conversation complete","ajánlatot küldünk"]
REQUIRED_FIELDS=["customer_name","customer_email","product_type"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring (Optional)
SENTRY_DSN=